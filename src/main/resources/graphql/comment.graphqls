type Comment {
    id: ID!
    name: String!
    text: String!
    article: Article!
}

type Article {
    id: ID!
    title: String!
    text: String!
    thumbnail: String
    comments: [Comment]!
}

# The Root Query for the application
type Query {
    recentComments(count: Int, offset: Int): [Comment]!
}

# The Root Mutation for the application
type Mutation {
    writeComment(name: String!, text: String!, article: String!) : Comment!
}